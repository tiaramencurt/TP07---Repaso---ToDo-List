@{
    ViewData["Title"] = "Modificar tarea";
}
<section>
    <h1>Modificar tarea</h1>
    <form action='@Url.Action("EditarTarea", "Home", new { Id = ViewBag.tarea.Id})' method="post">
        <input type="text" name="Titulo" placeholder="Ingresar tarea" value= "@ViewBag.tarea.Titulo" required/>
        <input type="text" name="Descripcion" placeholder="Ingresar descripción" value= "@ViewBag.tarea.Descripcion" required/>
        <input type="date" name="Fecha" placeholder="Ingresar fecha de realización de la tarea" required/>
        <input type="submit" value="Ingresar datos"/>
    </form>
</section>